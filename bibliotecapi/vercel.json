{
    "builds":[
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {"distDir": "staticfiles"}
        },
        {
            "src": "bibliotecapi/wsgi.py",
            "use": "@vercel/python",
            "config": {"maxLambdaSize": "15mb", "runtime": "python3.12"}
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "bibliotecapi/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        }
    ],
    "outputDirectory": "static"
}